<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#fff">

    <LinearLayout
        style="@style/SignUpActivityLinear">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:text="나의 펫 추가"
            android:textSize="30sp"
            android:fontFamily="@font/bonggil"
            android:textStyle="bold"/>
    </LinearLayout>


    <LinearLayout
        style="@style/SignUpActivityLinear">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="3"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                style="@style/addPetCustomTextView"
                android:text="애완동물 이름" />

            <TextView
                style="@style/addPetCustomTextView"
                android:text="애완동물 생일" />

            <TextView
                style="@style/addPetCustomTextView"
                android:text="가족된 날" />

            <TextView
                style="@style/addPetCustomTextView"
                android:text="종류" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_weight="1">


            <EditText
                android:id="@+id/ed_newPet"
                android:layout_marginLeft="20sp"
                android:layout_marginRight="20sp"
                android:layout_marginTop="10sp"
                android:layout_marginBottom="10sp"
                android:inputType="text"
                android:textSize="15sp"
                style="@style/SignUpActivityEditText"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/txt_petBirth"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:textSize="15sp"
                    android:text="2019-01-01"/>

                <ImageButton
                    android:id="@+id/imgBtn_petBirth"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:src="@drawable/calendar"
                    android:background="#fff"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/txt_petCome"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:textSize="15sp"
                    android:text="2019-01-01"/>

                <ImageButton
                    android:id="@+id/imgBtn_petCome"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:src="@drawable/calendar"
                    android:background="#fff"/>
            </LinearLayout>

            <Spinner
                android:id="@+id/sp_petKind"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="10sp"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        style="@style/SignUpActivityLinear"
        android:layout_marginBottom="5sp">
        <Button
            android:id="@+id/btn_pet_singup"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="5sp"
            android:background="@drawable/background_line"
            android:text="추가"
            android:fontFamily="@font/bonggil"/>
        <Button
            android:id="@+id/btn_pet_cancel"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="5sp"
            android:background="@drawable/background_line"
            android:text="취소"
            android:fontFamily="@font/bonggil"/>
    </LinearLayout>

</LinearLayout>