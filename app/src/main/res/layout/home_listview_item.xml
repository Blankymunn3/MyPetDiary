<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/home_linear"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/back_listview">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10sp"
        android:layout_marginTop="5sp"
        android:layout_marginBottom="5sp"
        android:background="#fff"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginStart="10sp"
            android:layout_marginEnd="10sp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_list_day"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_weight="1"
                android:text="1"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/txt_list_week"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_weight="1"
                android:text="월요일"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_gravity="center">

            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/img_list_post"
                android:layout_gravity="center"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:civ_border_color="#FFFFFF"
                app:civ_border_width="0.5sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="3sp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_list_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5sp"
                android:layout_weight="1"
                android:text="title"
                android:textColor="#000"
                android:textSize="18sp"
                android:ellipsize="end"
                android:singleLine="true" />

            <TextView
                android:id="@+id/txt_list_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5sp"
                android:layout_marginTop="2sp"
                android:layout_weight="1"
                android:text="content"
                android:maxLines="1"
                android:textSize="15sp"
                android:ellipsize="end"
                android:singleLine="true"/>


        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>