<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:fontFamily="@font/bonggil"
    android:background="#fff">

    <LinearLayout
        android:layout_weight="1.5"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/title_name"/>
    </LinearLayout>

    <LinearLayout
        style="@style/SignUpActivityLinear"/>
    <LinearLayout
        style="@style/SignUpActivityLinear">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="5.4"
            android:gravity="center"
            android:textSize="15sp"
            android:text="애완동물\n이름"/>

        <EditText
            android:id="@+id/ed_petName"
            android:layout_marginRight="5sp"
            android:inputType="text"
            style="@style/SignUpActivityEditText"/>
    </LinearLayout>

    <LinearLayout
        style="@style/SignUpActivityLinear">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2.93"
            android:gravity="center"
            android:textSize="15sp"
            android:text="애완동물\n생일"/>

        <TextView
            android:id="@+id/txt_petBirth"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1"
            android:textSize="15sp"
            android:text="2019-01-01"/>

        <ImageButton
            android:id="@+id/imgBtn_petBirth"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:src="@drawable/calendar"
            android:background="#fff"/>

    </LinearLayout>

    <LinearLayout
        style="@style/SignUpActivityLinear">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2.93"
            android:gravity="center"
            android:textSize="15sp"
            android:text="가족된날"/>

        <TextView
            android:id="@+id/txt_petCome"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1"
            android:textSize="15sp"
            android:text="2019-01-01"/>

        <ImageButton
            android:id="@+id/imgBtn_petCome"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:src="@drawable/calendar"
            android:background="#fff"/>

    </LinearLayout>

    <LinearLayout
        style="@style/SignUpActivityLinear">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="5.4"
            android:gravity="center"
            android:textSize="15sp"
            android:text="종류"/>
        <Spinner
            android:id="@+id/sp_petKind"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </Spinner>
    </LinearLayout>


    <LinearLayout
        style="@style/SignUpActivityLinear"/>

    <LinearLayout
        style="@style/SignUpActivityLinear"
        android:layout_marginBottom="5sp">
        <Button
            android:id="@+id/btn_pet_singup"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="5sp"
            android:background="@drawable/background_line"
            android:text="회원가입"/>
        <Button
            android:id="@+id/btn_pet_cancel"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="5sp"
            android:background="@drawable/background_line"
            android:text="취소"/>
    </LinearLayout>

</LinearLayout>